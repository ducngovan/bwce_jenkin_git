pipeline {
	agent any
	stages {
		stage('Clone git') {
			steps{
				git branch: 'main', url: 'https://github.com/ducngovan/bwce_jenkin_git.git'
			}
		}
		stage('Docker') {
			steps{
			echo 'Success ...............................'
				withDockerRegistry(credentialsId: 'docker-hub', url: 'https://index.docker.io/v1/') {
				sh 'docker build -t duc1996/demo_jenkins_image:v1 .'
				sh 'docker push duc1996/demo_jenkins_image:v1'
				}
			}
		}
		stage('Run container') {
			steps{
				echo 'Docker ...............................'
				sh 'docker run -- name demo_jenkins -p 8085:8085 duc1996/demo_jenkins_image:v1'
			}
		}
		
	
	}
}